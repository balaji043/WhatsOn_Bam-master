<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp180"
            android:src="@drawable/sample"
            android:scaleType="centerCrop"
            android:id="@+id/iv_event_image"
            android:contentDescription="@string/event_image" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_event_image">
                <TextView
                    android:id="@+id/tv_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="start"
                    android:text="@string/music_concert"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_below="@id/tv_event_name"
                    android:layout_marginStart="40dp"
                    android:fontFamily="serif"
                    android:text="@string/dutch"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_event_name"
                android:layout_toStartOf="@id/tv_event_start"
                android:fontFamily="serif"
                android:text="@string/_12am"
                android:id="@+id/tv_event_time"
                android:textSize="18sp"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/black"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_event_start"
                android:layout_alignParentEnd="true"
                android:text="@string/_04"
                android:layout_below="@id/tv_event_name"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp40"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
